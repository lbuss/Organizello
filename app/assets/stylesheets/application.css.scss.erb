@import "bootstrap";
@import "font-awesome";

body{
	background-image: url('<%= asset_path("contemporary_china.png") %>');
}

.boardList{
	background-color: rgba(230,230,230,.7);
	margin-bottom: 10px;
	padding: 5px;
}

.boardList h3{
	margin-top: 10px;
}

.boardList * li{
	margin-left: 5px;
	list-style-type: none;
}

.newList {
}

ul.lists{
  overflow-x: scroll;
}

li.list{
	display:inline;
}

.list{
	vertical-align:top;
	max-width: 212px;
    margin-right: 10px;
    margin-bottom: 10px;
}

.list.panel{
	border-color: rgba(230,230,230,.7);
	background-color: rgba(230,230,230,.7);
}

.list > .panel-heading{
	color: black;
	background-color: transparent;
	border-color: transparent;
}

.card .panel{
	overflow: hidden;
}

.card > .panel-heading{
	background-color: rgba(230,230,230,.7);
	border-color: rgba(230,230,230,.7);
}


.cards{
  max-width:200px;
  min-height: 50px;
  padding: 5px;

}

ul{
	padding: 0px;
}

.panel-body{
	padding-top: 5px;
	padding-bottom: 5px;
}

.btn-custom, .nav-pills>li>a{
	color: #808080;
	display: block;
	text-align: center;
	border-radius: 0px;
	padding: 6px;
	font-size: 11px;
	font-weight: 400;
	letter-spacing: 0.07rem;
	border: none;
	background-color: transparent;
	-webkit-transition: all 0.5s;
	-moz-transition: all 0.5s;
	transition: all 0.5s;
}

.btn-custom.light, .nav-pills>li>a.light{
	color: #808080;
	-moz-box-shadow: inset 0 0 0 1px #c0c0c0;
	-webkit-box-shadow: inset 0 0 0 1px #c0c0c0;
	box-shadow: inset 0 0 0 1px #c0c0c0;
}

.btn-custom:hover, .nav-pills>li.active>a{
	border: none;
	-moz-box-shadow: inset 0 0 0 4px #79B837;
	-webkit-box-shadow: inset 0 0 0 4px #79B837;
	box-shadow: inset 0 0 0 4px #79B837;
	text-decoration: none;
	background-color: #79B837 !important;
	color: rgb(255, 255, 255);
}

.btn-custom.addList{
	display: inline;
	background-color: rgba(230,230,230,.7);
}

.delete{
	color: #808080;
	text-align: center;
	border-radius: 5px;
	padding: 6px;
	font-size: 11px;
	font-weight: 400;
	letter-spacing: 0.07rem;
	border: none;
	background-color: transparent;
	-webkit-transition: all 0.5s;
	-moz-transition: all 0.5s;
	transition: all 0.5s;
	margin-left: 5px;
	margin-right: 5px;
	float: right;
	color: #808080;
	/*-moz-box-shadow: inset 0 0 0 1px #c0c0c0;
	-webkit-box-shadow: inset 0 0 0 1px #c0c0c0;
	box-shadow: inset 0 0 0 1px #c0c0c0;*/
}

.delete:hover {
	border: none;
	-moz-box-shadow: inset 0 0 0 4px #79B837;
	-webkit-box-shadow: inset 0 0 0 4px #79B837;
	box-shadow: inset 0 0 0 4px #79B837;
	text-decoration: none;
	background-color: #79B837 !important;
	color: rgb(255, 255, 255);
}